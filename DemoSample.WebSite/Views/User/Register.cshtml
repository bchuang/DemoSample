@{
    ViewBag.Title = "Register";
}

<!-- Page Header -->
<div class="container">
    <header class="page-header">
        <div class="branding">
            <img src="https://vuejs.org/images/logo.png" alt="Logo" title="Home page" class="logo" />
            <h1>Vue.js CRUD application</h1>
        </div>
    </header>
    <main id="app">
        <h2>Add new user</h2>
        <form v-on:submit="create_user">
            <div class="form-group">
                <label for="add-acct">Acct</label>
                <input id="add-acct" name="userAcct" v-model="user.acct" v-validate="'required|min:5|max:40'" class="form-control {'input': true, 'is-danger': errors.has('userAcct') }" />
                <i v-show="errors.has('userAcct')" class="fa fa-warning"></i>
                <span v-show="errors.has('userAcct')" class="help is-danger">{{ errors.first('userAcct') }}</span>
                <div style="color:red" v-if="validated.acct.length>0">
                    驗證:
                    <span v-for="item in validated.acct">
                        {{item}}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label for="add-name">Name</label>
                <input id="add-name" name="username" v-model="user.name" v-validate="'required|max:40'" class="form-control {'input': true, 'is-danger': errors.has('username') }" />
                <i v-show="errors.has('username')" class="fa fa-warning"></i>
                <span v-show="errors.has('username')" class="help is-danger">{{ errors.first('username') }}</span>
                <div style="color:red" v-if="validated.name.length>0">
                    驗證:
                    <span v-for="item in validated.name">
                        {{item}}
                    </span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/demo" class="btn btn-default">Cancel</a>
        </form>
    </main>
</div>
<script src="~/Scripts/Modules/User/Base.js"></script>
<script src="~/Scripts/Modules/User/Register.js"></script>